# ===== LLM 配置 =====
# LLM API 密钥（必需）
LLM_API_KEY=your_llm_api_key_here

# LLM 服务地址
LLM_BASE_URL=https://api-inference.modelscope.cn/v1

# LLM 模型名称
LLM_MODEL=deepseek-ai/DeepSeek-V3.2

# ===== 高德地图配置 =====
# Web端(JS API) Key - 用于前端地图显示（必需）
NEXT_PUBLIC_AMAP_API_KEY=your_amap_js_api_key_here

# 安全密钥 - 用于 JS API 验证（必需）
NEXT_PUBLIC_AMAP_SECURITY_KEY=your_amap_security_key_here

# Web服务 API Key - 用于后端 MCP 调用（必需）
AMAP_API_KEY=your_amap_web_service_key_here

# ===== 图片 API 配置（任选其一或都配置）=====
# Unsplash - 免费 50次/小时
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Pexels - 免费 200次/小时（推荐）
PEXELS_API_KEY=your_pexels_api_key_here

# ===== 搜索 API 配置（可选）=====
# Tavily AI 搜索
TAVILY_API_KEY=your_tavily_api_key_here

# Serper Google 搜索
SERPER_API_KEY=your_serper_api_key_here

# Bing 搜索
BING_SEARCH_KEY=your_bing_search_key_here

# ===== 获取 API Key =====
# 高德地图: https://console.amap.com/
# Unsplash: https://unsplash.com/oauth/applications
# Pexels: https://www.pexels.com/api/new/
# Tavily: https://tavily.com/
# Serper: https://serper.dev/
# Bing: https://www.microsoft.com/cognitive-services
